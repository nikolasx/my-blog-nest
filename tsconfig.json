{
  "compilerOptions": {
    "jsx": "react-jsx",
    "module": "commonjs",
    "declaration": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    // 别名
    "paths": {
      "@module/*": ["src/module/*"],
      "@client/*": ["src/client/*"],
    }
  },
}
